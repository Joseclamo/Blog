<% provide(:page_title, "All posts") %>


<p id="notice"><%= notice %></p>

<h1>Posts</h1>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h3><%= link_to post.title, post %></h3>
          </div>
          <div class="card-body">
            <label for=""><small class="text-muted"> Escrito por <%= post.user.username %></small></label>
            
            <div class="form: {style: 'display:inline-block;'}">             
              <div class="alert alert-success" role="alert", class="card-text"><%= sanitize post.blog_entry %></br></br>
                <div class="btn-group"> 
                  <p><%= button_to "Mostrar", post, :class => "btn btn-primary", :method => :get %></p>
                  <p><%= button_to "Editar", edit_post_path(post), :class => "btn btn-success", :method => :get %></p>
                  <p><%= button_to 'Borrar', post, :class => "btn btn-secondary", method: :delete, data: { confirm: 'Are you sure?' } %></p>
                  <p><h6>Creado el día</h6><%= post.created_at %></p>
                </div></br>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
  </div>
  <%= paginate @posts %>
<div>
  <br>
  <br>
